{
  "name": "daruk",
  "version": "2.0.2",
  "description": "a node.js web framework",
  "main": "build/index.js",
  "scripts": {
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "dev": "ts-node --project tsconfig.json --files src/index.ts",
    "build": "rimraf -rf ./build && tsc && cp -rf src/typings types/",
    "demo": "ts-node --project tsconfig.json --files",
    "cov": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "test": "cross-env TS_NODE_FILES=true nyc --reporter=lcov --reporter=text-summary --cache mocha --timeout 15000 --exit ./test/{,/**/}*.test.ts",
    "tslint": "tslint --project . ./src/**/*.ts",
    "prepublish": "npm run build",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "types": "./types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:darukjs/daruk.git"
  },
  "keywords": [
    "framework"
  ],
  "author": {
    "name": "xiaojue",
    "email": "designsor@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/config-conventional": "^7.6.0",
    "@commitlint/travis-cli": "^7.6.1",
    "@types/basic-auth": "^1.1.2",
    "@types/chai": "^4.1.7",
    "@types/convert-hrtime": "^2.0.0",
    "@types/expect": "^1.20.3",
    "@types/is": "^0.0.21",
    "@types/koa-ejs": "^4.2.0",
    "@types/koa-favicon": "^2.0.19",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^7.0.10",
    "@types/supertest": "^2.0.7",
    "@types/url-join": "^4.0.0",
    "all-contributors-cli": "^6.3.1",
    "chai": "^4.1.2",
    "codecov": "^3.5.0",
    "conventional-changelog-cli": "^2.0.31",
    "cross-env": "^5.2.0",
    "koa-ejs": "^4.2.0",
    "koa-favicon": "^2.0.1",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.0",
    "sqlite3": "^4.0.6",
    "supertest": "^3.3.0",
    "ts-node": "^8.1.0",
    "tslint": "^5.12.1",
    "tslint-config-alloy": "^0.2.1",
    "tslint-config-prettier": "^1.17.0",
    "typeorm": "^0.2.16",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "@koa/router": "^9.4.0",
    "@types/cron": "^1.7.1",
    "@types/koa": "^2.0.46",
    "@types/koa__router": "^8.0.2",
    "@types/node": "^10.12.18",
    "@types/recursive-readdir": "^2.2.0",
    "@types/url-join": "^4.0.0",
    "chalk": "^2.4.1",
    "convert-hrtime": "^2.0.0",
    "cron": "^1.7.1",
    "daruk-exit-hook": "^0.3.0",
    "daruk-logger": "^1.10.0",
    "daruk-request-id": "^0.4.3",
    "htmlspecialchars": "^1.0.5",
    "http-server-shutdown": "^1.1.2",
    "inversify": "^5.0.1",
    "inversify-binding-decorators": "^4.0.0",
    "inversify-inject-decorators": "^3.1.0",
    "is": "^3.3.0",
    "koa": "^2.5.2",
    "koa-body": "^4.1.0",
    "object-assign-deep": "^0.4.0",
    "recursive-readdir": "^2.2.2",
    "reflect-metadata": "^0.1.13",
    "url-join": "^4.0.0"
  },
  "nyc": {
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "src/typings/*"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "files": [
    "src",
    "types",
    "build",
    "LICENSE"
  ]
}
